var Leon= new google.maps.LatLng(42.6056, - 5.5700);
var Ponferrada = new google.maps.LatLng(42.5500, -6.5833);
var Portomarín = new google.maps.LatLng(42.8072, -7.6158);
var Santiago_de_Compostela = new google.maps.LatLng(42.8778, -8.5444);


function initialize()
{


var mapProp = {
  center:Saint_Jean_Pied_de_Port,
  zoom:7,
  mapTypeId:google.maps.MapTypeId.ROADMAP
  };

var map=new google.maps.Map(document.getElementById("googleMap"),mapProp);
var hike = '/hike.png'
var culture = '/culture.png'

var marker=new google.maps.Marker({
  position:Saint_Jean_Pied_de_Port,
  icon: hike

});

var marker1=new google.maps.Marker({
  position:Roncesvalles,
  icon: hike

  });

var marker2=new google.maps.Marker({
   position:Pamploma,
   icon: hike

   });
var marker3=new google.maps.Marker({
position:Santo_Domingo_de_la_Calzada,
    icon:hike

    });
var marker4=new google.maps.Marker({
position:Burgos,
    icon:hike

    });
var marker5=new google.maps.Marker({
position:Leon,
    icon:culture

    });
var marker6=new google.maps.Marker({
position:Ponferrada,
