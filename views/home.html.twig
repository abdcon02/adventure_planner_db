<!DOCTYPE html>
<html>
    <head>
        <title>Princess Adventures</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/styles.css" type="text/css" media="all">
    </head>
    <body>
        <div class="container">
            <div class="header">
                <img id="banner" src="../images/banner.jpg" alt="banner"/>
                <h1>Princess Adventures</h1>
                <div class="navbar">
                    <a href="/"><span>Home</span></a>
                    <span>Search</span>
                    <span class="blank_nav"></span>
                    <span>Login</span>
                    <span>Cart</span>
                </div>
            </div>

            <div class="main">

                {% for action in adventures %}
                    <div class="adventure_box">
                        <a href="/adventure/{{ action.getId }}">
                        <img class="adventure_image" src="../images/{{ action.getId }}.jpg" alt="adventure image" />
                        </a>
                        <p><span class="adventure_name">{{ action.getName }}</span></p>
                        <p> Cost: <span class="cost">${{ action.getCost }}</span></p>
                        <div class="adventure_activities">
                            {% for event in action.getActivities %}
                                <img class="adventure_activities_icons" src="../images/{{ event.getName }}.png" alt="Icon" />
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="footer">

            </div>

            <a href="/santiago">Santiago</a>
            <a href="/sanjuan">SanJuan</a>
            <a href="/denali">Denali</a>
            <a href="/alps">Alps</a>
            <a href="/australi">Australi</a>
            <a href="/thailand">Thai</a>

        </div>
    </body>
</html>
